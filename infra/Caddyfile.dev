# Development HTTP Configuration
{
    auto_https off
    admin off
}

# HTTP on port 80
:80 {
    # API routes
    handle /api/* {
        reverse_proxy api:8000
    }

    # All other routes go to the React app
    handle {
        reverse_proxy web:80
    }

    # Logs
    log {
        output stdout
        format console
    }
}
