# Development Environment Template
# Copy this file to .env for development

# Environment
APP_ENV=development
TZ=America/Los_Angeles

# Security Keys (These are for dev only - NOT for production!)
SECRET_KEY=dev-secret-key-not-for-production
JWT_SECRET_KEY=dev-jwt-secret-not-for-production

# Database Configuration
POSTGRES_DB=crm_dev
POSTGRES_USER=crm_dev_user
POSTGRES_PASSWORD=dev_password_123
DATABASE_URL=postgresql://crm_dev_user:dev_password_123@postgres:5432/crm_dev

# Redis
REDIS_URL=redis://redis:6379/0

# Authentication
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS - Allow localhost for development
CORS_ORIGINS=["http://localhost", "http://localhost:80", "http://localhost:5173", "http://localhost:8000"]

# Hostnames
ADMIN_HOSTNAME=krc.bec.local
KIOSK_HOSTNAME=kiosk.bec.local

# Zapier Integration (Dev mode - logs instead of sending)
ZAPIER_CATCH_HOOK_URL=https://hooks.zapier.com/hooks/catch/dev-hook/
ZAPIER_HMAC_SECRET=dev-hmac-secret
ZAPIER_MODE=dev_log

# Textla Messaging (Development)
TEXTLA_SENDER=+18668849961

# ggLeap Integration (Disabled in dev)
GGLEAP_API_KEY=dev-ggleap-key
GGLEAP_BASE_URL=https://api.ggleap.com

# Feature Flags - Disable external integrations in dev
FEATURE_MESSAGING=true
FEATURE_GGLEAP_SYNC=false

# Development URLs
API_URL=http://localhost:8000
WEB_URL=http://localhost:5173
