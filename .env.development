# Development Environment
APP_ENV=development
SECRET_KEY=dev-secret-key-not-for-production
TZ=America/Los_Angeles

# Database
DATABASE_URL=postgresql://crm_user:crm_password@localhost:5432/crm_db

# Redis
REDIS_URL=redis://localhost:6379/0

# Authentication
JWT_SECRET_KEY=dev-jwt-secret-not-for-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS - Allow localhost for development
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Zapier Integration - Dev mode logs instead of sending
ZAPIER_CATCH_HOOK_URL=https://hooks.zapier.com/hooks/catch/dev-hook/
ZAPIER_HMAC_SECRET=dev-hmac-secret
ZAPIER_MODE=dev_log

# Textla Messaging
TEXTLA_SENDER=+18668849961

# ggLeap Integration - Disabled in dev
GGLEAP_API_KEY=dev-ggleap-key
GGLEAP_BASE_URL=https://api.ggleap.com

# Feature Flags - Disable external integrations in dev
FEATURE_MESSAGING=true
FEATURE_GGLEAP_SYNC=false

# Development URLs
API_URL=http://localhost:8000
WEB_URL=http://localhost:5173