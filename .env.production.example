# Application
APP_ENV=production
SECRET_KEY=your-secret-key-here
TZ=America/Los_Angeles

# Database
POSTGRES_PASSWORD=your-secure-database-password-here
DATABASE_URL=postgresql://crm_user:your-secure-database-password-here@postgres:5432/crm_db

# Redis
REDIS_URL=redis://redis:6379/0

# Authentication
JWT_SECRET_KEY=your-jwt-secret-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=https://krc.bakersfieldesports.com,https://kiosk.bakersfieldesports.com

# Zapier Integration
ZAPIER_CATCH_HOOK_URL=https://hooks.zapier.com/hooks/catch/your-hook-id/
ZAPIER_HMAC_SECRET=your-zapier-hmac-secret
ZAPIER_MODE=production

# Textla Messaging
TEXTLA_SENDER=+18668849961

# ggLeap Integration
GGLEAP_API_KEY=your-ggleap-api-key
GGLEAP_BASE_URL=https://api.ggleap.com

# Feature Flags
FEATURE_MESSAGING=true
FEATURE_GGLEAP_SYNC=true

# Production Hostnames
ADMIN_HOSTNAME=krc.bakersfieldesports.com
KIOSK_HOSTNAME=kiosk.bakersfieldesports.com